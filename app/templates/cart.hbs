<div class="row">
  <div class="col-sm-2 ml-sm-auto cartLink">
    {{#link-to 'home'}}
      <span>
        Go back
      </span>
    {{/link-to}}
  </div>
</div>

{{#if cart.empty}}

  <div class="row justify-content-sm-center">
    <h1>Your cart is empty</h1>
  </div>
  <div class="row justify-content-sm-center">
    {{#link-to 'home'}}
      <span class="button">
        Add pizzas
      </span>
    {{/link-to}}
  </div>
{{else}}


  <div class="row justify-content-sm-center">
    <h1>Your Cart</h1>
  </div>

  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-2">
      <h4 class="title">Sizes</h4>
    </div>
    <div class="col-md-3">
      <h4 class="title">Toppings</h4>
    </div>
    <div class="col-md-2">
      <h4 class="title">Quantity</h4>
    </div>
    <div class="col-md-2">
      <h4 class="title">Price</h4>
    </div>
    <div class="col-md-2">
      <h4 class="title">Remove</h4>
    </div>
  </div>

  {{#each cart.pizzas as |pizza|}}
    {{cart-item pizza=pizza}}
  {{/each}}

  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-4">
      <h4>Order Total: ${{currency cart.total}}</h4>
    </div>
  </div>

{{/if}}
