<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-2">
    <h4>{{pizza.size}}</h4>
  </div>
  <div class="col-md-3 cartItem">
    {{#each pizza.toppings as |topping|}}
      {{toppings topping pizza.toppings}}
    {{/each}}
  </div>
  <div class="col-md-2">
    <select 
       class="quantitySelect"
       onChange={{action "handleUpdateQuantity"}}
       selected={{pizza.quantity}}>

      {{#each quantityNums as |num|}}
        <option
       key={{num}}
       selected={{eq num pizza.quantity}}
       value={{num}}>
        {{num}}
        </option>
      {{/each}}
    </select>
  </div>
  <div class="col-md-2">
    <h4>{{currency pizza.total}}</h4>
  </div>
  <div class="col-md-2">
    <h4 class="delete" onClick={{action "handleRemovePizza"}}>X</h4>
  </div>
</div>
